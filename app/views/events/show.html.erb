
<div class="container text-center d-flex justify-content-center">
<div class="card" style="width: 50%;">
  <img src="https://images.unsplash.com/photo-1470229722913-7c0e2dbbafd3?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Titre : <%=@current_event.title%></h5>
    <p class="card-text">Description : <%=@current_event.description%></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Email de l'organisateur : <%=@current_event.admin.email%></li>
    <li class="list-group-item">Date de début : <%=@current_event.start_date%></li>
    <li class="list-group-item">Date de fin : <%=@current_event.start_date + @current_event.duration.minutes%></li>
    <li class="list-group-item">Lieu : <%=@current_event.location%></li>
    <li class="list-group-item">Prix : <%=@current_event.price%> €</li>
  </ul>
</div>
</div>